@{
    ViewData["Title"] = "Register";
}

<h2>@(ViewBag.Role == "Admin" ? "Register as Admin" : "Register as User")</h2>

<form asp-action="@(ViewBag.Role == "Admin" ? "RegisterAdmin" : "Register")" method="post">
    <div>
        <label>Username</label>
        <input type="text" name="Username" value="@Model?.Username" required />
    </div>
    <div>
        <label>Email</label>
        <input type="email" name="Email" value="@Model?.Email" required />
    </div>
    <div>
        <label>Password</label>
        <input type="password" name="Password" required />
    </div>
    <div>
        <label>Phone</label>
        <input type="text" name="Phone" value="@Model?.Phone" required />
    </div>

    <button type="submit">Register</button>

    @if (ViewBag.Error != null)
    {
        <p style="color:red">@ViewBag.Error</p>
    }
</form>
