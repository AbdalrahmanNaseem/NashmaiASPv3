@model test2.Models.Category

@{
    ViewData["Title"] = "إنشاء تصنيف جديد";
    Layout = "~/Views/Shared/adminDashboard.cshtml";
}

<h2 class="mb-4">إنشاء تصنيف جديد</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UserId" class="form-label">المستخدم المرتبط</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId">
                    <option value="">-- اختر مستخدمًا --</option>
                </select>

                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="حفظ" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">رجوع</a>
            </div>
        </form>
        <div asp-validation-summary="All" class="text-danger"></div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
